\mode<presentation>



% Colors

% https://www.uni-paderborn.de/universitaet/presse-kommunikation-marketing/design-vorgaben-templates/farben

% UPB primary
\definecolor{upbblue}{HTML}{00205b}
\definecolor{upbcyan}{HTML}{18b0e2}
\definecolor{upbgraylight}{HTML}{c7c9c7}
\definecolor{upbgraydark}{HTML}{555555}

% UPB secondary
\definecolor{upb2magenta}{HTML}{d73367}
\definecolor{upb2blue}{HTML}{007eb9}
\definecolor{upb2green}{HTML}{a4c424}
\definecolor{upb2orange}{HTML}{f29512}
\definecolor{upb2purple}{HTML}{a93983}

% Dark
\definecolor{upb3blue}{HTML}{68cbec}
\definecolor{upb3green}{HTML}{b1cd44}
\definecolor{upb3yellow}{HTML}{f6b04d}
\definecolor{upb3red}{HTML}{e4797c}
\definecolor{upb3gray}{HTML}{a9a9a9}
\definecolor{upb3purple}{HTML}{cf92ba}

% Light
\definecolor{upb4blue}{HTML}{a2dff3}
\definecolor{upb4green}{HTML}{d1e191}
\definecolor{upb4yellow}{HTML}{f9cf94}
\definecolor{upb4red}{HTML}{f1b7b9}
\definecolor{upb4gray}{HTML}{c3c3c3}
\definecolor{upb4purple}{HTML}{e1bad3}

% Highlight
\definecolor{upb5blue}{HTML}{d0eff9}
\definecolor{upb5green}{HTML}{e4eebd}
\definecolor{upb5yellow}{HTML}{fbe4c3}
\definecolor{upb5red}{HTML}{f9e0e1}
\definecolor{upb5gray}{HTML}{e5e5e5}
\definecolor{upb5purple}{HTML}{f2e1ec}

% Template
\colorlet{templatelayoutbg}{upb5gray}
\colorlet{templatefg}{black}
\colorlet{templatetitlefg}{black}



% Elements

% Title, sub-title
\setbeamercolor{titlelike}{fg=templatetitlefg}
\setbeamercolor{frametitle}{bg=templatelayoutbg,fg=templatetitlefg}

% Boxes
\setbeamercolor{block title}{bg=upb4blue,fg=templatefg}
\setbeamercolor{block body}{bg=upb5blue}
\setbeamercolor{block title alerted}{bg=upb4purple,fg=templatefg}
\setbeamercolor{block body alerted}{bg=upb5purple}
\setbeamercolor{block title example}{bg=upb4green,fg=templatefg}
\setbeamercolor{block body example}{bg=upb5green}

% Alert text
\setbeamercolor{alerted text}{fg=upb2purple}

% Items
\setbeamercolor{structure}{fg=templatefg}
\setbeamercolor{local structure}{fg=templatefg}

% Palette
\setbeamercolor{palette primary}{bg=templatelayoutbg,fg=templatefg}
\setbeamercolor{palette secondary}{bg=templatelayoutbg,fg=templatefg}
\setbeamercolor{palette tertiary}{bg=templatelayoutbg,fg=templatefg}
\setbeamercolor{palette quaternary}{bg=templatelayoutbg,fg=templatefg}

% Sidebar (not used)
%\useoutertheme{sidebar}
\setbeamercolor{sidebar}{bg=templatelayoutbg,fg=templatefg}
\setbeamercolor{palette sidebar primary}{bg=templatelayoutbg,fg=templatefg}
\setbeamercolor{palette sidebar secondary}{bg=templatelayoutbg,fg=templatefg}
\setbeamercolor{palette sidebar tertiary}{bg=templatelayoutbg,fg=templatefg}
\setbeamercolor{palette sidebar quaternary}{bg=templatelayoutbg,fg=templatefg}

\mode
<all>