% Template elements

\colorlet{templatetext}{black}
\colorlet{templateheadings}{black}
\colorlet{templatebackground}{white}

% Text
\setbeamercolor{alerted text}{fg=textred}
\colorlet{urls}{upbblue}

% Title, sub-title
\setbeamercolor{titlelike}{fg=templateheadings}
\setbeamercolor{frametitle}{bg=templatebackground,fg=templateheadings}

% Boxes
\setbeamercolor{block title}{bg=lightblue,fg=templatetext}
\setbeamercolor{block body}{bg=backgroundblue}
\setbeamercolor{block title alerted}{bg=lightred,fg=templatetext}
\setbeamercolor{block body alerted}{bg=backgroundred}
\setbeamercolor{block title example}{bg=lightgreen,fg=templatetext}
\setbeamercolor{block body example}{bg=backgroundgreen}

% Items
\setbeamercolor{structure}{fg=templatetext}
\setbeamercolor{local structure}{fg=templatetext}

% Palette
\setbeamercolor{palette primary}{bg=templatebackground,fg=templatetext}
\setbeamercolor{palette secondary}{bg=templatebackground,fg=templatetext}
\setbeamercolor{palette tertiary}{bg=templatebackground,fg=templatetext}
\setbeamercolor{palette quaternary}{bg=templatebackground,fg=templatetext}

% Sidebar (not used)
\setbeamercolor{sidebar}{bg=templatebackground,fg=templatetext}
\setbeamercolor{palette sidebar primary}{bg=templatebackground,fg=templatetext}
\setbeamercolor{palette sidebar secondary}{bg=templatebackground,fg=templatetext}
\setbeamercolor{palette sidebar tertiary}{bg=templatebackground,fg=templatetext}
\setbeamercolor{palette sidebar quaternary}{bg=templatebackground,fg=templatetext}

\mode
<all>
