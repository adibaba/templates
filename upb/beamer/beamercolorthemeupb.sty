% Template
\colorlet{templatelayoutbg}{upb5gray}
\colorlet{templatefg}{black}
\colorlet{templatetitlefg}{black}



% Template elements

% Title, sub-title
\setbeamercolor{titlelike}{fg=templatetitlefg}
\setbeamercolor{frametitle}{bg=white,fg=templatetitlefg}

% Boxes
\setbeamercolor{block title}{bg=bluebgtitle,fg=templatefg}
\setbeamercolor{block body}{bg=bluebg}
\setbeamercolor{block title alerted}{bg=redbgtitle,fg=templatefg}
\setbeamercolor{block body alerted}{bg=redbg}
\setbeamercolor{block title example}{bg=greenbgtitle,fg=templatefg}
\setbeamercolor{block body example}{bg=greenbg}

% Alert text
\setbeamercolor{alerted text}{fg=textred}

% Items
\setbeamercolor{structure}{fg=templatefg}
\setbeamercolor{local structure}{fg=templatefg}

% Palette
\setbeamercolor{palette primary}{bg=white,fg=templatefg}
\setbeamercolor{palette secondary}{bg=white,fg=templatefg}
\setbeamercolor{palette tertiary}{bg=white,fg=templatefg}
\setbeamercolor{palette quaternary}{bg=white,fg=templatefg}

